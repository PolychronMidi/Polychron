{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "output",
    "dist",
    "tmp",
    "csv_maestro/**/node_modules"
  ],
  "include": ["src/**/*"]
}