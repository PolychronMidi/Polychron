{
  "type": "commonjs",
  "dependencies": {
    "@tonaljs/rhythm-pattern": "^1.0.0",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.16",
    "depcheck": "^1.4.7",
    "eslint": "^9.0.0",
    "markdown-link-check": "^3.14.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "build": "tsc",
    "build:timed": "node scripts/build-and-log.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "type-check": "tsc --checkJs",
    "audit": "npm audit",
    "deps:check": "depcheck",
    "deps:audit": "npm audit && depcheck",
    "pretest": "npm run lint",
    "all": "npm run build:timed && npm run play",
    "play": "node src/play && py c2m.py",
    "docs:refresh": "node scripts/refresh-doc-examples.mjs",
    "docs:check-links": "node scripts/check-links.mjs",
    "docs:enforce-links": "node scripts/enforce-doc-links.mjs"
  }
}
