{
  "type": "commonjs",
  "dependencies": {
    "@tonaljs/rhythm-pattern": "^1.0.0",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "chokidar": "^5.0.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.0.0",
    "husky": "^8.0.0",
    "markdown-link-check": "^3.14.2",
    "ts-morph": "^27.0.2",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "lint:raw": "eslint . --ext .js",
    "lint": "node scripts/run-with-log.js lint.log npm run lint:raw",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "cross-env SILENCE_LOGS=1 node scripts/run-with-log.js test-full.log npm run all && npm run docs:status",
    "test:verbose": "vitest --run --reporter=verbose",
    "test:coverage": "node scripts/run-with-log.js coverage.log npm run test:coverage:raw",
    "test:coverage:raw": "vitest --coverage --run",
    "test:loop": "node scripts/tests-loop.js",
    "test:composer-contract": "vitest --run test/composer.integration.test.js test/composer.registry.strict.test.js --reporter=dot",
    "test:debug": "node scripts/test-debug.js",
    "onboard": "node scripts/onboard.js",
    "todo": "node scripts/new-todo.js",
    "am-i-done": "node scripts/am-i-done.js",
    "all": "npm run lint && npm run dont-use-this-directly && npm run verify",
    "play": "node scripts/run-with-log.js play.log node scripts/play-guard.js",
    "verify": "npm run play && npm run verify:overlap && npm run verify:unit-tree && npm run verify:layer-alignment && npm run verify:unitMasterMap",
    "verify:fast": "cross-env PLAY_LIMIT=1 npm run play && npm run verify:unit-tree && npm run verify:layer-alignment && npm run verify:unitMasterMap",
    "verify:overlap": "node scripts/test/treewalker.js",
    "verify:unit-tree": "node scripts/test/unitTreeAudit.js",
    "verify:unitMasterMap": "node scripts/test/unitMasterMap.js",
    "verify:layer-alignment": "node scripts/test/layerAlignment.js",
    "docs:fix": "node scripts/docs.js fix",
    "docs:watch": "node scripts/docs.js watch",
    "docs:check": "node scripts/docs.js check",
    "docs:index": "node scripts/docs.js index",
    "docs:status": "node scripts/docs.js status",
    "prepare": "husky install",
    "audit": "npm audit",
    "deps:check": "depcheck",
    "deps:audit": "npm audit && depcheck",
    "dont-use-this-directly": "node scripts/run-with-log.js test-full.log vitest --run --reporter=default"
  }
}
