{
  "type": "module",
  "dependencies": {
    "@tonaljs/rhythm-pattern": "^1.0.0",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.16",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "markdown-link-check": "^3.14.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "main": "src/play.js",
  "scripts": {
    "build": "esbuild src/**/*.ts --outdir=dist --platform=node --format=esm",
    "build:watch": "esbuild src/**/*.ts --outdir=dist --platform=node --format=esm --watch",
    "test": "vitest",
    "test:run": "vitest --run --reporter=verbose 2>&1 | grep -E '^\\s*(✓|×|FAIL|PASS|Test Files|Tests|Duration)' || vitest --run",
    "test:quick": "vitest --run 2>&1 | tail -30",
    "test:coverage": "vitest --coverage",
    "test:loop": "node scripts/tests-loop.js",
    "lint": "eslint src/**/*.{js,ts}",
    "type-check": "tsc --noEmit",
    "clean": "Remove-Item src/**/*.map -ErrorAction SilentlyContinue; Remove-Item src/*.map -ErrorAction SilentlyContinue",
    "audit": "npm audit",
    "deps:check": "depcheck",
    "deps:audit": "npm audit && depcheck",
    "pretest": "npm run lint",
    "all": "npm run lint && npm run build && npm test",
    "start": "npm run build && node dist/play.js && py c2m.py",
    "play": "npm run build && node dist/play.js && py c2m.py",
    "docs:refresh": "node scripts/refresh-doc-examples.mjs",
    "docs:check-links": "node scripts/check-links.mjs",
    "docs:enforce-links": "node scripts/enforce-doc-links.mjs"
  }
}
