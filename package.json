{
  "type": "commonjs",
  "dependencies": {
    "@tonaljs/rhythm-pattern": "^1.0.0",
    "tonal": "^6.4.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.16",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "markdown-link-check": "^3.14.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "main": "src/play.js",
  "scripts": {
    "build": "esbuild src/**/*.ts --outdir=dist --platform=node",
    "build:watch": "esbuild src/**/*.ts --outdir=dist --platform=node --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "echo 'TypeScript source files - linting skipped for now'",
    "type-check": "tsc --noEmit",
    "clean": "Remove-Item src/**/*.map -ErrorAction SilentlyContinue; Remove-Item src/*.map -ErrorAction SilentlyContinue",
    "audit": "npm audit",
    "deps:check": "depcheck",
    "deps:audit": "npm audit && depcheck",
    "pretest": "npm run lint",
    "all": "npm run lint && npm run build && npm test",
    "start": "node src/play && py c2m.py",
    "play": "node src/play && py c2m.py",
    "docs:refresh": "node scripts/refresh-doc-examples.mjs",
    "docs:check-links": "node scripts/check-links.mjs",
    "docs:enforce-links": "node scripts/enforce-doc-links.mjs"
  }
}
