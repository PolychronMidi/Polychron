{
  "type": "module",
  "dependencies": {
    "@tonaljs/rhythm-pattern": "^1.0.0",
    "chokidar": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tonal": "^6.4.2",
    "ts-morph": "^27.0.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.16",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "husky": "^8.0.0",
    "markdown-link-check": "^3.14.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "main": "src/play.js",
  "scripts": {
    "build": "node scripts/run-with-log.js build.log npm run build:raw",
    "build:raw": "esbuild src/**/*.ts --outdir=dist --platform=node --format=esm",
    "build:watch": "esbuild src/**/*.ts --outdir=dist --platform=node --format=esm --watch",
    "test": "node scripts/run-with-log.js test-full.log npm run all",
    "test:raw": "vitest --run --reporter=default",
    "test:watch": "vitest",
    "test:verbose": "vitest --run --reporter=verbose",
    "test:coverage": "node scripts/run-with-log.js coverage.log npm run test:coverage:raw",
    "test:coverage:raw": "vitest --coverage --run",
    "test:loop": "node scripts/tests-loop.js",
    "test:quick": "node scripts/run-with-log.js test.log npm run test:raw && npm run docs:status",
    "test:composer-contract": "vitest --run test/composer.integration.test.ts test/composer.registry.strict.test.ts --reporter=dot",
    "test:debug": "node scripts/test-debug.js",
    "lint": "node scripts/run-with-log.js lint.log npm run lint:raw",
    "lint:raw": "eslint src/**/*.{js,ts}",
    "type-check": "node scripts/run-with-log.js type-check.log npm run type-check:raw",
    "type-check:raw": "tsc --noEmit",
    "audit": "npm audit",
    "deps:check": "depcheck",
    "deps:audit": "npm audit && depcheck",
    "pretest": "npm run lint",
    "all": "npm run lint && npm run type-check && npm run build && npm run test:quick && npm run play",
    "start": "npm run build && node dist/play.js && py c2m.py",
    "play": "node scripts/run-with-log.js play.log npm run play:raw",
    "play:raw": "node dist/play.js && py c2m.py",
    "docs:fix": "node scripts/docs.js fix",
    "docs:watch": "node scripts/docs.js watch",
    "docs:check": "node scripts/docs.js check",
    "docs:index": "node scripts/docs.js index",
    "docs:status": "node scripts/docs.js status",
    "onboard": "node scripts/onboard.js",
    "todo": "node scripts/new-todo.js",
    "am-i-done": "node scripts/am-i-done.js",
    "prepare": "husky install"
  }
}
