{
  "$schema": "https://deepwiki.org/schema/deepwiki.v1.json",
  "title": "Polychron Documentation Wiki",
  "description": "Wiki-style documentation for the Polychron MIDI composition system",
  "version": "1.0.0",
  "language": "en",
  "docs_directory": "./docs",
  "source_directory": "./src",

  "wiki": {
    "name": "Polychron",
    "description": "AI-powered MIDI composition system with polyrhythmic generation and infinite time signature support",
    "homepage": "play.md",
    "navigation": {
      "auto_generate": true,
      "root_section": "Getting Started",
      "sections": [
        {
          "title": "Core Concepts",
          "files": ["play.md", "sheet.md", "composers.md"],
          "description": "Main architecture and core modules"
        },
        {
          "title": "Technical Components",
          "files": ["backstage.md", "stage.md", "writer.md"],
          "description": "Foundation utilities and output layers"
        },
        {
          "title": "Specialized Systems",
          "files": ["time.md", "rhythm.md", "venue.md"],
          "description": "Timing, rhythm generation, and MIDI reference"
        }
      ]
    }
  },

  "features": {
    "auto_linking": {
      "enabled": true,
      "patterns": [
        {
          "pattern": "^([A-Za-z]+)\\.js$",
          "template": "[{match}](docs/{match_base}.md)"
        },
        {
          "pattern": "class:\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "template": "`{match}`"
        },
        {
          "pattern": "function:\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "template": "`{match}()`"
        }
      ]
    },

    "backlinks": {
      "enabled": true,
      "show_related": true
    },

    "search": {
      "enabled": true,
      "full_text": true,
      "index_code_blocks": true
    },

    "versioning": {
      "enabled": true,
      "track_changes": true
    },

    "metadata": {
      "enabled": true,
      "extract_patterns": [
        {
          "name": "source",
          "regex": ">\\s*\\*\\*Source\\*\\*:\\s*`([^`]+)`"
        },
        {
          "name": "status",
          "regex": ">\\s*\\*\\*Status\\*\\*:\\s*(.+)"
        },
        {
          "name": "dependencies",
          "regex": ">\\s*\\*\\*Dependencies\\*\\*:\\s*(.+)"
        }
      ]
    }
  },

  "modules": {
    "play": {
      "file": "play.md",
      "source": "src/play.js",
      "title": "Main Composition Engine",
      "category": "Core",
      "imports": ["stage", "composers", "rhythm", "time", "backstage", "venue"],
      "description": "Heart and conductor of the Polychron system"
    },
    "stage": {
      "file": "stage.md",
      "source": "src/stage.js",
      "title": "Audio Processing Engine",
      "category": "Core",
      "imports": ["backstage", "writer", "sheet", "composers", "rhythm", "time", "venue"],
      "description": "Orchestrates all sound processing and effects"
    },
    "composers": {
      "file": "composers.md",
      "source": "src/composers.js",
      "title": "Musical Intelligence System",
      "category": "Core",
      "imports": ["backstage", "venue", "sheet"],
      "description": "Generates harmonic and melodic content"
    },
    "rhythm": {
      "file": "rhythm.md",
      "source": "src/rhythm.js",
      "title": "Rhythmic Pattern Generator",
      "category": "Core",
      "imports": ["backstage", "venue", "sheet"],
      "description": "Creates rhythmic patterns and beat divisions"
    },
    "time": {
      "file": "time.md",
      "source": "src/time.js",
      "title": "Timing Engine",
      "category": "Core",
      "imports": ["backstage"],
      "description": "Manages timing and meter spoofing for ANY time signature",
      "innovations": ["Infinite Time Signature Support", "MIDI Meter Ratio Conversion"]
    },
    "backstage": {
      "file": "backstage.md",
      "source": "src/backstage.js",
      "title": "Foundation Layer",
      "category": "Foundation",
      "imports": [],
      "description": "Core utilities, mathematical functions, and global state"
    },
    "writer": {
      "file": "writer.md",
      "source": "src/writer.js",
      "title": "Output Layer",
      "category": "Foundation",
      "imports": ["time", "backstage"],
      "description": "MIDI file output and CSV generation"
    },
    "sheet": {
      "file": "sheet.md",
      "source": "src/sheet.js",
      "title": "Configuration System",
      "category": "Foundation",
      "imports": [],
      "description": "All musical parameters and system settings"
    },
    "venue": {
      "file": "venue.md",
      "source": "src/venue.js",
      "title": "MIDI Reference Data",
      "category": "Reference",
      "imports": [],
      "description": "MIDI constants, instruments, and music theory data"
    }
  },

  "architecture": {
    "layers": [
      {
        "name": "Composition Layer",
        "modules": ["play", "composers", "rhythm"],
        "description": "Musical generation and composition logic"
      },
      {
        "name": "Core Processing",
        "modules": ["stage", "time"],
        "description": "Audio processing and timing management"
      },
      {
        "name": "Foundation Layer",
        "modules": ["backstage", "sheet", "venue", "writer"],
        "description": "Utilities, configuration, and output infrastructure"
      }
    ]
  },

  "cross_reference": {
    "auto_generate_sections": [
      {
        "section": "Related Modules",
        "based_on": "imports"
      },
      {
        "section": "Used By",
        "based_on": "reverse_imports"
      }
    ]
  },

  "export": {
    "formats": ["html", "pdf", "markdown"],
    "include_code_examples": true,
    "include_diagrams": true,
    "include_navigation": true
  },

  "search_config": {
    "index_files": ["docs/**/*.md"],
    "exclude_patterns": ["**/node_modules/**", "**/__pycache__/**"],
    "metadata_fields": ["source", "status", "dependencies"],
    "full_text_search": true
  }
}
